#!/bin/sh

dir="$(pwd)"
cd "$(dirname "$0")"
home="$(pwd)"
cd "${dir}"

if [ ! -z "${Y_HOST}" ]
then
    host="${Y_HOST}"
elif emacs --version > /dev/null 2>&1
then
    host=emacs
else
    echo "no host found. (Is emacs version >= 24 on your PATH?)"
    exit 1
fi

debug="${Y_DEBUG:+-f toggle-debug-on-error}"
opts="${Y_OPTIONS:--Q --batch -l}"
code="${Y_BOOT}"

if [ -z "${code}" ]
then
    code="${home}/y.el"
fi

exec ${host} ${debug} ${opts} "${code}" "$@"
ECHO is on.
